<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <report
            id="price_list_isometric"
            model="product.template"
            string="Lista de precios"
            report_type="qweb-pdf"
            name="report_price_list.report_price_list_isometric"
            file="report_price_list.report_price_list_isometric"
        />
        <template id="report_price_list_isometric">
            <t t-call="report.html_container">
                <t t-foreach="lines_id" t-as="line" style="font-family: Century Gothic;">
                    <div class="header">
                        <div class="row" style="border-bottom: 3px solid black;">
                            <div class="col-xs-3" style="font-size: 30pt;">
                                <span t-field="line.name"/>
                            </div>
                            <div class="col-xs-6" style="font-size: 30pt;">
                                LISTA DE PRECIOS
                            </div>
                            <div class="col-xs-3 text-right" style="margin-top: 18pt; font-size: 12pt;">
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                            </div>
                        </div>
                        <table width="100%" style="margin-top: 25px;">
                            <tbody>
                                <tr style="font-size: 11.5pt;">
                                    <td width="30%" align="center"><strong>DESCRIPCIÃ“N</strong></td>
                                    <td width="19%" align="center"><strong>CLAVE</strong></td>
                                    <td width="15%" align="center"><strong>PRECIO LISTA</strong></td>
                                    <td width="20%" align="center"><strong>DIMENSIONES(cm)</strong></td>
                                    <td width="8%" align="center"><strong>KG</strong></td>
                                    <td width="8%" align="center"><strong>M3</strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="page">
                        <table width="100%">
                            <tbody>
                                <t t-foreach="docs[line.name]" t-as="doc">
                                    <tr>
                                        <td colspan="7" height="22px" style="font-size: 10.5pt;"><strong><span t-field="doc.name"/></strong></td>
                                    </tr>
                                    <tr height="137px" style="border-bottom: 0.5px solid black;font-size: 9.5pt;">
                                        <td width="30%"><img t-att-src="'data:image/png;base64,%s' % doc.isometric" style="max-height: 125px;"/></td>
                                        <td width="19%" align="center"><span t-field="doc.note_pricelist"/>   <span t-field="doc.reference_mask"/></td>
                                        <td width="15%" align="center"><span t-field="doc.list_price" t-field-options='{"widget": "monetary", "display_currency": "doc.currency_id"}'/></td>
                                        <td width="20%" align="center"><span t-field="doc.length"/> x <span t-field="doc.width"/> x <span t-field="doc.height"/></td>
                                        <td width="8%" align="center"><span t-field="doc.weight"/></td>
                                        <td width="8%" align="center"><span t-field="doc.volume"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <div class="footer">
                        <div class="col-xs-5" style="font-size: 9pt;">
                            Condiciones Comerciales:<br/>
                            *Precios no incluyen I.V.A<br/>
                            *Precios menos descuentos autorizados<br/>
                            *Precios sujetos a cambios sin previo aviso
                        </div>
                        <div class="col-xs-2" align="center" style="font-size: 8pt;">
                            <span class="page" />
                        </div>
                        <div class="col-xs-5" align="right">
                            <img t-att-src="'data:image/png;base64,%s' % logo" style="max-height: 30px;"/><br/>.com
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>